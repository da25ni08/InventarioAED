<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="15" alignment="CENTER" prefWidth="400">
    <Label text="Modificar Marcaje" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Producto:" style="-fx-font-size: 14px;" />
        <ComboBox fx:id="productoComboBox" promptText="Seleccionar Producto" prefWidth="250" />
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Aula:" style="-fx-font-size: 14px;" />
        <ComboBox fx:id="aulaComboBox" promptText="Seleccionar Aula" prefWidth="250" />
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Tipo:" style="-fx-font-size: 14px;" />
        <TextField fx:id="tipoField" promptText="Tipo (Ejemplo: 1/2)" prefWidth="250" />
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Fecha:" style="-fx-font-size: 14px;" />
        <DatePicker fx:id="fechaPicker" prefWidth="150" />
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Hora:" style="-fx-font-size: 14px;" />
        <Spinner fx:id="horaSpinner" prefWidth="80" />
        <Label text=":" />
        <Spinner fx:id="minutoSpinner" prefWidth="80" />
    </HBox>
</VBox>





